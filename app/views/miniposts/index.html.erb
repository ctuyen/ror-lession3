<p id="notice"><%= notice %></p>

<h1>Miniposts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @miniposts.each do |minipost| %>
      <tr>
        <td><%= minipost.content %></td>
        <td><%= minipost.user_id %></td>
        <td class="btn btn-default"><%= link_to 'Show', minipost %></td>
        <td class="btn btn-default"><%= link_to 'Edit', edit_minipost_path(minipost) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', minipost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-default"><%= link_to 'New Minipost', new_minipost_path %></button>
