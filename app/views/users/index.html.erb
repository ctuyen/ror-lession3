<p id="notice"><%= notice %></p>

<h1>Users</h1>

<form action="" method="GET" role="form">
  <div class="form-group">
    <label for="email">Search by email</label>
    <input id="email" type="text" class="form-control" name="email">
  </div>
  <button type="submit" class="btn btn-primary">Search</button>
</form>

<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if(@users.nil?) %>
      <tr><td colspan="6">User doesn't exists.</td></tr>
    <% end %>
    <% else %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td class="btn btn-default"><%= link_to 'Show', user %></td>
        <td class="btn btn-default"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="btn btn-danger"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="btn btn-default"><%= link_to 'New User', new_user_path %></button>
